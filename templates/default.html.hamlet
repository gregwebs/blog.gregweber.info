  <body>
    <div id="wrap">
      <header>
        <h1.blog-title>#{blogTitle}
      <nav#top>
        <a href=@{HomeR}>Home
        <a href=@{PostsR}>All posts
      <div id="page">
        <div id="content">
          ^{pageBody pc}
        <aside>
          ^{sidebar}
      <footer>
